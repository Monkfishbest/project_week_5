<form class="/classes/<%=@class.id  %>/edit " method="post">
  <label for="class-name">Class Name</label>
  <input type="text" name="class_name" value="<%= @class.class_name %> ">

  <label for="date-class">Date of class</label>
  <input type="date" name="date_class" value=" <%= @class.date_class  %> " id="date-class">

  <label for="time-class">Time of class</label>
  <input type="time" name="time_class" value=" <%= @class.time_class  %> " id="time-class">
  <input type="submit" value="Edit class details">

</form>
